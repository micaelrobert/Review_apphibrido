<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Gerenciador de Tarefas</title>
    
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;600&family=Orbitron:wght@400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-rocket"></i> App Híbrido
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto" id="nav-links">
                    </ul>
            </div>
        </div>
    </nav>
    
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const navLinks = document.getElementById('nav-links');
        const loggedInUser = JSON.parse(sessionStorage.getItem('loggedInUser'));

        if (loggedInUser) {
            navLinks.innerHTML = `
                <li class="nav-item">
                    <a class="nav-link" href="/tarefas"><i class="fas fa-tasks"></i> Tarefas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard"><i class="fas fa-chart-line"></i> Dashboard</a>
                </li>
                <li class="nav-item">
                    <span class="nav-link user-greeting">// Olá, ${loggedInUser.username}</span>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" id="logoutBtn" style="color: var(--priority-alta) !important;"><i class="fas fa-sign-out-alt"></i> Sair</a>
                </li>
            `;
            
            document.getElementById('logoutBtn').addEventListener('click', (e) => {
                e.preventDefault();
                sessionStorage.removeItem('loggedInUser');
                window.location.href = '/login';
            });

        } else {
            navLinks.innerHTML = `
                <li class="nav-item">
                    <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cadastro"><i class="fas fa-user-plus"></i> Cadastro</a>
                </li>
            `;
        }
    });
</script>